{
  "name": "openzwave-shared",
  "version": "1.7.1",
  "description": "Node.JS bindings for OpenZWave including management and security functions",
  "main": "./lib/openzwave-shared.js",
  "types": "./types/openzwave-shared.d.ts",
  "dependencies": {
    "nan": ">=2.14.0"
  },
  "scripts": {
    "test": "node test.js",
    "preinstall": "node lib/install-ozw.js",
    "install": "node-gyp rebuild",
    "release": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && release-it",
    "changelog": "auto-changelog -p && git add CHANGELOG.md"
  },
  "auto-changelog": {
    "commitLimit": false
  },
  "release-it": {
    "github": {
      "release": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "hooks": {
      "before:init": [
        "npm run install",
        "npm run test"
      ],
      "after:bump": [
        "npm run changelog"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/OpenZWave/node-openzwave-shared.git"
  },
  "keywords": [
    "zwave",
    "z-wave",
    "home automation",
    "openzwave",
    "open-zwave"
  ],
  "author": "Elias Karakoulakis <elias.karakoulakis@gmail.com>",
  "contributors": [
    "davide-lr",
    "Justin Hammond",
    "Jonathan Perkin (http://www.perkin.org.uk/)",
    "Luke Hertert (http://werul.com)",
    "Michiel Mooring",
    "Thibaut CONSTANT",
    "Henry Rawas",
    "Rushi Desai",
    "Steven Adams",
    "Jan Erik Hanssen",
    "Brennan Kinney",
    "Adam Rensel",
    "David Moxey",
    "Bart Bakker",
    "vectah0",
    "yybd",
    "Rob Huehn",
    "Michael Franken",
    "Matt Eastman",
    "codepeon",
    "Casey Foster",
    "vibr77",
    "blackshadev (https://github.com/blackshadev)",
    "Daniel Lando (https://github.com/robertsLando)",
    "Jorge Schrauwen (https://blackdot.be)"
  ],
  "license": {
    "type": "ISC",
    "url": "http://opensource.org/licenses/ISC"
  },
  "gypfile": true
}
